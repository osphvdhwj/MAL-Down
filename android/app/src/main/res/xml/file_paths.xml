<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External storage root -->
    <external-path
        name="external_files"
        path="." />
    
    <!-- Pictures directory -->
    <external-path
        name="pictures"
        path="Pictures/MAL-Down/" />
    
    <!-- App-specific external storage -->
    <external-files-path
        name="my_images"
        path="/" />
    
    <!-- Cache directory for temporary files -->
    <external-cache-path
        name="cache"
        path="." />
    
    <!-- Internal storage -->
    <files-path
        name="internal_files"
        path="." />
</paths>
